@model Bank.WebUI.Models.ViewModels.TransferViewModel

@if (TempData.Keys != null && TempData.Count > 0)
{
    if (TempData["Error"] != null)
    {
        var error = @TempData["Error"];
        <div class="alert alert-danger">@error</div>
    }

    if (TempData["Success"] != null)
    {
        var message = @TempData["Success"];
        <div class="alert alert-success">@message</div>
    }
}

<form method="post" asp-action="Transfer" asp-controller="Transfer">
    <div class="form-group">
        <label class="form-check-label" asp-for="@Model.SenderAccountID">Sender Account ID</label>
        <input class="form-control" asp-for="@Model.SenderAccountID" />
    </div>

    <div class="form-group">
        <label class="form-check-label" asp-for="@Model.RecipientAccountID">Recipient Account ID</label>
        <input class="form-control" asp-for="@Model.RecipientAccountID" />
    </div>

    <div class="form-group">
        <label class="form-check-label" asp-for="@Model.Amount">Amount</label>
        <input class="form-control" asp-for="@Model.Amount" />
    </div>

    <input type="submit" class="btn btn-primary" />
</form>